<UserControl x:Class="ControlWorkbench.App.Views.DroneTelemetryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#1E1E1E">
    
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="TelemetryLabel">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="TelemetryValue">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="LargeValue">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Top Status Bar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="15" CornerRadius="5" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Flight Mode -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border x:Name="FlightModeBorder" Background="#4CAF50" Padding="15,8" CornerRadius="3" Margin="0,0,15,0">
                        <TextBlock x:Name="FlightModeText" Text="LOITER" FontSize="16" FontWeight="Bold" Foreground="White"/>
                    </Border>
                    <Border x:Name="ArmedBorder" Background="#3E3E42" Padding="10,8" CornerRadius="3" Margin="0,0,10,0">
                        <TextBlock x:Name="ArmedText" Text="ARMED" Foreground="#4CAF50" FontWeight="Bold"/>
                    </Border>
                    <Border Background="#3E3E42" Padding="10,8" CornerRadius="3">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="GpsIndicator" Width="8" Height="8" Fill="#4CAF50" Margin="0,0,5,0"/>
                            <TextBlock x:Name="GpsFixText" Text="GPS: 3D Fix" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Quick Stats -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <TextBlock Text="Sats: " Foreground="#888888" VerticalAlignment="Center"/>
                    <TextBlock x:Name="SatCountText" Text="14" Foreground="#4CAF50" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    
                    <TextBlock Text="HDOP: " Foreground="#888888" VerticalAlignment="Center"/>
                    <TextBlock x:Name="HdopText" Text="0.8" Foreground="#4CAF50" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Battery -->
                <Border Grid.Column="2" Background="#3E3E42" Padding="15,8" CornerRadius="3" Margin="10,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Battery" FontSize="12" Margin="0,0,8,0" Foreground="#888888"/>
                        <StackPanel>
                            <TextBlock x:Name="BatteryVoltageText" Text="16.2V" Foreground="#4CAF50" FontWeight="Bold"/>
                            <TextBlock x:Name="BatteryInfoText" Text="97% | 15.2A" Foreground="#888888" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Flight Time -->
                <Border Grid.Column="3" Background="#3E3E42" Padding="15,8" CornerRadius="3" Margin="10,0">
                    <StackPanel>
                        <TextBlock Text="Flight Time" Foreground="#888888" FontSize="10"/>
                        <TextBlock x:Name="FlightTimeText" Text="00:00" FontFamily="Consolas" FontSize="18" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                
                <!-- Recording -->
                <Border x:Name="RecordingBorder" Grid.Column="4" Background="#F44336" Padding="15,8" CornerRadius="3">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="RecordingIndicator" Width="10" Height="10" Fill="White" Margin="0,0,8,0"/>
                        <TextBlock Text="REC" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Main Dashboard -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Attitude Indicator -->
            <Border Grid.Column="0" Grid.Row="0" Background="#2D2D30" Margin="5" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Attitude" Foreground="White" FontWeight="Bold" Margin="10"/>
                    
                    <!-- Artificial Horizon -->
                    <Viewbox Grid.Row="1" Margin="20">
                        <Canvas Width="200" Height="200" ClipToBounds="True">
                            <!-- Sky/Ground with rotation -->
                            <Ellipse x:Name="HorizonEllipse" Width="180" Height="180" Canvas.Left="10" Canvas.Top="10" RenderTransformOrigin="0.5,0.5">
                                <Ellipse.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#2196F3" Offset="0"/>
                                        <GradientStop Color="#2196F3" Offset="0.48"/>
                                        <GradientStop Color="#8B4513" Offset="0.52"/>
                                        <GradientStop Color="#8B4513" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="HorizonRotation" Angle="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            
                            <!-- Pitch lines -->
                            <Line X1="80" Y1="100" X2="120" Y2="100" Stroke="White" StrokeThickness="2"/>
                            <Line X1="90" Y1="85" X2="110" Y2="85" Stroke="White" StrokeThickness="1"/>
                            <Line X1="90" Y1="115" X2="110" Y2="115" Stroke="White" StrokeThickness="1"/>
                            
                            <!-- Aircraft symbol -->
                            <Path Data="M100,100 L85,108 L100,105 L115,108 Z" Fill="#FFD700" Stroke="Black" StrokeThickness="1"/>
                            <Ellipse Width="6" Height="6" Canvas.Left="97" Canvas.Top="97" Fill="#FFD700"/>
                            
                            <!-- Roll indicator arc -->
                            <Path Stroke="White" StrokeThickness="2" Data="M 30,100 A 70,70 0 0 1 170,100"/>
                            
                            <!-- Current roll marker -->
                            <Polygon x:Name="RollMarker" Points="100,35 95,45 105,45" Fill="White" RenderTransformOrigin="0.5,2.17">
                                <Polygon.RenderTransform>
                                    <RotateTransform x:Name="RollMarkerRotation" Angle="0"/>
                                </Polygon.RenderTransform>
                            </Polygon>
                        </Canvas>
                    </Viewbox>
                    
                    <!-- Numeric values -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Roll: " Style="{StaticResource TelemetryLabel}"/>
                            <TextBlock x:Name="RollValueText" Text="0.0" Style="{StaticResource TelemetryValue}"/>
                            <TextBlock Text="  Pitch: " Style="{StaticResource TelemetryLabel}"/>
                            <TextBlock x:Name="PitchValueText" Text="0.0" Style="{StaticResource TelemetryValue}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Altitude and Speed -->
            <Border Grid.Column="1" Grid.Row="0" Background="#2D2D30" Margin="5" CornerRadius="5" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Altitude / Speed" Foreground="White" FontWeight="Bold"/>
                    
                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <TextBlock Text="Altitude (rel)" Style="{StaticResource TelemetryLabel}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="AltitudeText" Text="47.3" Style="{StaticResource LargeValue}"/>
                            <TextBlock Text=" m" Foreground="#888888" FontSize="18" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                        </StackPanel>
                        <TextBlock x:Name="ClimbRateText" Text="Climb: 0.0 m/s" Foreground="#4CAF50" FontSize="14"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" VerticalAlignment="Center">
                        <TextBlock Text="Ground Speed" Style="{StaticResource TelemetryLabel}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="GroundSpeedText" Text="8.5" Style="{StaticResource LargeValue}"/>
                            <TextBlock Text=" m/s" Foreground="#888888" FontSize="18" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                        </StackPanel>
                        <TextBlock x:Name="SpeedKmhText" Text="= 30.6 km/h" Foreground="#888888" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Heading and Position -->
            <Border Grid.Column="2" Grid.Row="0" Background="#2D2D30" Margin="5" CornerRadius="5" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Heading / Position" Foreground="White" FontWeight="Bold"/>
                    
                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <!-- Compass -->
                        <Viewbox Width="120" Height="120" Margin="0,10">
                            <Canvas Width="100" Height="100">
                                <Ellipse Width="100" Height="100" Stroke="#555555" StrokeThickness="2"/>
                                
                                <!-- Cardinal directions -->
                                <TextBlock Text="N" Canvas.Left="46" Canvas.Top="5" Foreground="#F44336" FontWeight="Bold"/>
                                <TextBlock Text="E" Canvas.Left="85" Canvas.Top="43" Foreground="White"/>
                                <TextBlock Text="S" Canvas.Left="46" Canvas.Top="80" Foreground="White"/>
                                <TextBlock Text="W" Canvas.Left="8" Canvas.Top="43" Foreground="White"/>
                                
                                <!-- Heading arrow -->
                                <Path x:Name="HeadingArrow" Data="M50,25 L45,40 L50,35 L55,40 Z" Fill="#FFD700" RenderTransformOrigin="0.5,0.625">
                                    <Path.RenderTransform>
                                        <RotateTransform x:Name="HeadingRotation" Angle="45"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Canvas>
                        </Viewbox>
                        
                        <TextBlock x:Name="HeadingText" Text="045" Style="{StaticResource LargeValue}" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="HeadingCardinalText" Text="NE" Foreground="#888888" HorizontalAlignment="Center"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <TextBlock Text="Home: " Foreground="#888888"/>
                            <TextBlock x:Name="DistanceToHomeText" Text="127m" Foreground="#4CAF50"/>
                            <TextBlock x:Name="BearingToHomeText" Text=" @ 225" Foreground="#888888"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Motor Outputs -->
            <Border Grid.Column="0" Grid.Row="1" Background="#2D2D30" Margin="5" CornerRadius="5" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Motor Outputs" Foreground="White" FontWeight="Bold"/>
                    
                    <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Motor 4 (Front Left) -->
                        <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="M4" Foreground="#888888" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Motor4Text" Text="72%" Foreground="#4CAF50" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                            <ProgressBar x:Name="Motor4Bar" Value="72" Maximum="100" Width="50" Height="4"/>
                        </StackPanel>
                        
                        <!-- Motor 1 (Front Right) -->
                        <StackPanel Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="M1" Foreground="#888888" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Motor1Text" Text="70%" Foreground="#4CAF50" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                            <ProgressBar x:Name="Motor1Bar" Value="70" Maximum="100" Width="50" Height="4"/>
                        </StackPanel>
                        
                        <!-- Center icon -->
                        <Border Grid.Column="1" Grid.Row="1" Width="40" Height="40" Background="#3E3E42" CornerRadius="20">
                            <TextBlock Text="X" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                        </Border>
                        
                        <!-- Motor 3 (Back Left) -->
                        <StackPanel Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="M3" Foreground="#888888" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Motor3Text" Text="68%" Foreground="#4CAF50" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                            <ProgressBar x:Name="Motor3Bar" Value="68" Maximum="100" Width="50" Height="4"/>
                        </StackPanel>
                        
                        <!-- Motor 2 (Back Right) -->
                        <StackPanel Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="M2" Foreground="#888888" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Motor2Text" Text="71%" Foreground="#4CAF50" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                            <ProgressBar x:Name="Motor2Bar" Value="71" Maximum="100" Width="50" Height="4"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- GPS Info -->
            <Border Grid.Column="1" Grid.Row="1" Background="#2D2D30" Margin="5" CornerRadius="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="GPS" Foreground="White" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Latitude:" Style="{StaticResource TelemetryLabel}" Margin="0,3"/>
                        <TextBlock x:Name="LatitudeText" Grid.Row="0" Grid.Column="1" Text="40.712776" Foreground="White" FontFamily="Consolas" Margin="0,3"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Longitude:" Style="{StaticResource TelemetryLabel}" Margin="0,3"/>
                        <TextBlock x:Name="LongitudeText" Grid.Row="1" Grid.Column="1" Text="-74.005974" Foreground="White" FontFamily="Consolas" Margin="0,3"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Altitude MSL:" Style="{StaticResource TelemetryLabel}" Margin="0,3"/>
                        <TextBlock x:Name="AltMslText" Grid.Row="2" Grid.Column="1" Text="58.2 m" Foreground="White" Margin="0,3"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Satellites:" Style="{StaticResource TelemetryLabel}" Margin="0,3"/>
                        <TextBlock x:Name="SatellitesText" Grid.Row="3" Grid.Column="1" Text="14" Foreground="#4CAF50" FontWeight="Bold" Margin="0,3"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="HDOP / VDOP:" Style="{StaticResource TelemetryLabel}" Margin="0,3"/>
                        <TextBlock x:Name="DopText" Grid.Row="4" Grid.Column="1" Text="0.8 / 1.2" Foreground="White" Margin="0,3"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Battery Details -->
            <Border Grid.Column="2" Grid.Row="1" Background="#2D2D30" Margin="5" CornerRadius="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="Battery" Foreground="White" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <!-- Cell voltages -->
                    <TextBlock Text="Cell Voltages" Style="{StaticResource TelemetryLabel}"/>
                    <StackPanel x:Name="CellVoltagesPanel" Orientation="Horizontal" Margin="0,5,0,15">
                        <Border Background="#3E3E42" Padding="8,5" CornerRadius="3" Margin="0,0,5,0">
                            <TextBlock x:Name="Cell1Text" Text="4.05V" Foreground="#4CAF50" FontFamily="Consolas"/>
                        </Border>
                        <Border Background="#3E3E42" Padding="8,5" CornerRadius="3" Margin="0,0,5,0">
                            <TextBlock x:Name="Cell2Text" Text="4.04V" Foreground="#4CAF50" FontFamily="Consolas"/>
                        </Border>
                        <Border Background="#3E3E42" Padding="8,5" CornerRadius="3" Margin="0,0,5,0">
                            <TextBlock x:Name="Cell3Text" Text="4.05V" Foreground="#4CAF50" FontFamily="Consolas"/>
                        </Border>
                        <Border Background="#3E3E42" Padding="8,5" CornerRadius="3">
                            <TextBlock x:Name="Cell4Text" Text="4.06V" Foreground="#4CAF50" FontFamily="Consolas"/>
                        </Border>
                    </StackPanel>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Current" Style="{StaticResource TelemetryLabel}"/>
                            <TextBlock x:Name="CurrentText" Text="15.2 A" Style="{StaticResource TelemetryValue}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Power" Style="{StaticResource TelemetryLabel}"/>
                            <TextBlock x:Name="PowerText" Text="246 W" Style="{StaticResource TelemetryValue}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,0,10">
                            <TextBlock Text="Consumed" Style="{StaticResource TelemetryLabel}"/>
                            <TextBlock x:Name="ConsumedText" Text="342 mAh" Style="{StaticResource TelemetryValue}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,0,0,10">
                            <TextBlock Text="Remaining" Style="{StaticResource TelemetryLabel}"/>
                            <TextBlock x:Name="RemainingTimeText" Text="~12 min" Style="{StaticResource TelemetryValue}" Foreground="#4CAF50"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Messages and Logs -->
            <Border Grid.Column="3" Grid.RowSpan="2" Background="#2D2D30" Margin="5" CornerRadius="5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Messages" Foreground="White" FontWeight="Bold" Margin="5,0,0,10"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="MessagesPanel">
                            <!-- Messages will be added dynamically -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

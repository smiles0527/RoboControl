<UserControl x:Class="ControlWorkbench.App.Views.PidTunerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{StaticResource BgDarkBrush}">
    
    <UserControl.Resources>
        <Style x:Key="GainCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgCardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style x:Key="GainLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="GainInput" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BgDarkBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Controllers and Gains -->
        <Border Grid.Column="0" Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Ellipse Width="10" Height="10" Margin="0,0,10,0">
                            <Ellipse.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource AccentGreen}" Offset="0"/>
                                    <GradientStop Color="{StaticResource AccentCyan}" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Fill>
                            <Ellipse.Effect>
                                <DropShadowEffect Color="{StaticResource AccentGreen}" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="PID TUNER" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    
                    <!-- Controller Selection -->
                    <TextBlock Text="SELECT CONTROLLER" Style="{StaticResource SectionHeader}"/>
                    <ListBox x:Name="ControllerList" Height="130" SelectionChanged="ControllerList_SelectionChanged">
                        <ListBoxItem Content="lateral" IsSelected="True"/>
                        <ListBoxItem Content="angular"/>
                        <ListBoxItem Content="drive_ff"/>
                        <ListBoxItem Content="lift"/>
                        <ListBoxItem Content="intake"/>
                    </ListBox>
                    
                    <!-- Gain Inputs -->
                    <TextBlock Text="GAINS" Style="{StaticResource SectionHeader}"/>
                    
                    <!-- kP -->
                    <Border Style="{StaticResource GainCard}">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="{StaticResource AccentGreen}" Opacity="0.3"/>
                        </Border.BorderBrush>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="kP" Style="{StaticResource GainLabel}" Foreground="{StaticResource AccentGreenBrush}"/>
                            <Slider x:Name="KpSlider" Grid.Column="1" Minimum="0" Maximum="50" Value="10" 
                                    VerticalAlignment="Center" Margin="10,0" ValueChanged="Gain_ValueChanged"/>
                            <TextBox x:Name="KpText" Grid.Column="2" Text="10.00" Style="{StaticResource GainInput}"
                                     TextChanged="GainText_Changed"/>
                            
                            <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Text="Proportional - Stronger response to error" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="10" Margin="0,8,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- kI -->
                    <Border Style="{StaticResource GainCard}">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="{StaticResource AccentBlue}" Opacity="0.3"/>
                        </Border.BorderBrush>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="kI" Style="{StaticResource GainLabel}" Foreground="{StaticResource AccentBlueBrush}"/>
                            <Slider x:Name="KiSlider" Grid.Column="1" Minimum="0" Maximum="5" Value="0" 
                                    VerticalAlignment="Center" Margin="10,0" ValueChanged="Gain_ValueChanged"/>
                            <TextBox x:Name="KiText" Grid.Column="2" Text="0.00" Style="{StaticResource GainInput}"
                                     TextChanged="GainText_Changed"/>
                            
                            <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Text="Integral - Eliminates steady-state error" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="10" Margin="0,8,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- kD -->
                    <Border Style="{StaticResource GainCard}">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="{StaticResource AccentOrange}" Opacity="0.3"/>
                        </Border.BorderBrush>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="kD" Style="{StaticResource GainLabel}" Foreground="{StaticResource AccentOrangeBrush}"/>
                            <Slider x:Name="KdSlider" Grid.Column="1" Minimum="0" Maximum="100" Value="30" 
                                    VerticalAlignment="Center" Margin="10,0" ValueChanged="Gain_ValueChanged"/>
                            <TextBox x:Name="KdText" Grid.Column="2" Text="30.00" Style="{StaticResource GainInput}"
                                     TextChanged="GainText_Changed"/>
                            
                            <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Text="Derivative - Dampens oscillation" 
                                       Foreground="{StaticResource TextMutedBrush}" FontSize="10" Margin="0,8,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Actions -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button x:Name="SendGainsBtn" Content="&#x26A1; Send to Robot" 
                                Style="{StaticResource SuccessButton}" Click="SendGains_Click"/>
                        <Button x:Name="FetchGainsBtn" Content="&#x2193; Fetch" Click="FetchGains_Click"/>
                    </StackPanel>
                    
                    <!-- Presets -->
                    <TextBlock Text="PRESETS" Style="{StaticResource SectionHeader}"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Safe" Width="80" Click="PresetConservative_Click"/>
                        <Button Content="Balanced" Width="80" Click="PresetBalanced_Click"/>
                        <Button Content="Fast" Width="80" Click="PresetAggressive_Click"/>
                    </StackPanel>
                    
                    <!-- Profiles -->
                    <TextBlock Text="PROFILES" Style="{StaticResource SectionHeader}"/>
                    <ComboBox x:Name="ProfileCombo" Margin="0,0,0,8">
                        <ComboBoxItem Content="Default"/>
                        <ComboBoxItem Content="Competition"/>
                        <ComboBoxItem Content="Skills"/>
                    </ComboBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Save" Width="90" Click="SaveProfile_Click"/>
                        <Button Content="Load" Width="90" Click="LoadProfile_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Center: Graphs -->
        <Border Grid.Column="1" Background="{StaticResource BgDarkBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Toolbar -->
                <Border Grid.Row="0" Background="{StaticResource BgMediumBrush}" Padding="15,10"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="StartTestBtn" Content="&#x25B6; Start Test" 
                                Style="{StaticResource SuccessButton}" Click="StartTest_Click"/>
                        <Button x:Name="StopTestBtn" Content="&#x25A0; Stop" 
                                Style="{StaticResource DangerButton}" Click="StopTest_Click" IsEnabled="False"/>
                        
                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="15,0"/>
                        
                        <Button Content="Clear" Click="ClearGraph_Click"/>
                        <Button Content="Export CSV" Click="ExportCsv_Click"/>
                        
                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="15,0"/>
                        
                        <TextBlock Text="Test Mode:" Foreground="{StaticResource TextSecondaryBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="TestModeCombo" Width="130">
                            <ComboBoxItem Content="Step Response" IsSelected="True"/>
                            <ComboBoxItem Content="Ramp"/>
                            <ComboBoxItem Content="Sine Wave"/>
                            <ComboBoxItem Content="Square Wave"/>
                        </ComboBox>
                    </StackPanel>
                </Border>
                
                <!-- Response Graph -->
                <Border Grid.Row="1" Margin="15" CornerRadius="10"
                        Background="{StaticResource BgCardBrush}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                    <Grid>
                        <TextBlock Text="RESPONSE" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                                   Margin="15,10" VerticalAlignment="Top" FontSize="12"/>
                        
                        <Canvas x:Name="ResponseCanvas" Margin="50,35,20,30" ClipToBounds="True"/>
                        
                        <!-- Legend -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15">
                            <Border Width="15" Height="3" CornerRadius="1" Background="{StaticResource AccentGreenBrush}" Margin="0,0,5,0"/>
                            <TextBlock Text="Setpoint" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Margin="0,0,12,0"/>
                            <Border Width="15" Height="3" CornerRadius="1" Background="{StaticResource AccentCyanBrush}" Margin="0,0,5,0"/>
                            <TextBlock Text="Actual" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Margin="0,0,12,0"/>
                            <Border Width="15" Height="3" CornerRadius="1" Background="{StaticResource AccentPinkBrush}" Margin="0,0,5,0"/>
                            <TextBlock Text="Error" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- PID Terms Graph -->
                <Border Grid.Row="2" Margin="15,0,15,15" CornerRadius="10"
                        Background="{StaticResource BgCardBrush}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                    <Grid>
                        <TextBlock Text="PID TERMS" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                                   Margin="15,10" VerticalAlignment="Top" FontSize="12"/>
                        
                        <Canvas x:Name="TermsCanvas" Margin="50,35,20,30" ClipToBounds="True"/>
                        
                        <!-- Legend -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15">
                            <Border Width="15" Height="3" CornerRadius="1" Background="{StaticResource AccentGreenBrush}" Margin="0,0,5,0"/>
                            <TextBlock Text="P" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Margin="0,0,12,0"/>
                            <Border Width="15" Height="3" CornerRadius="1" Background="{StaticResource AccentBlueBrush}" Margin="0,0,5,0"/>
                            <TextBlock Text="I" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Margin="0,0,12,0"/>
                            <Border Width="15" Height="3" CornerRadius="1" Background="{StaticResource AccentOrangeBrush}" Margin="0,0,5,0"/>
                            <TextBlock Text="D" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Margin="0,0,12,0"/>
                            <Border Width="15" Height="3" CornerRadius="1" Background="{StaticResource TextPrimaryBrush}" Margin="0,0,5,0"/>
                            <TextBlock Text="Output" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        
        <!-- Right Panel: Metrics and Analysis -->
        <Border Grid.Column="2" Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Ellipse Width="10" Height="10" Fill="{StaticResource AccentPurpleBrush}" Margin="0,0,10,0">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="{StaticResource AccentPurple}" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="ANALYSIS" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    
                    <!-- Tuning Quality Score -->
                    <Border Style="{StaticResource GainCard}" Padding="20">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1C2128" Offset="0"/>
                                <GradientStop Color="#21262D" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="QualityScore" Text="B+" FontSize="56" FontWeight="Black" HorizontalAlignment="Center">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="{StaticResource AccentGreen}" Offset="0"/>
                                        <GradientStop Color="{StaticResource AccentCyan}" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="{StaticResource AccentGreen}" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock x:Name="QualityDescription" Text="Good response, slight overshoot" 
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" 
                                       TextAlignment="Center" TextWrapping="Wrap" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Performance Metrics -->
                    <TextBlock Text="PERFORMANCE" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource GainCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="28"/>
                                <RowDefinition Height="28"/>
                                <RowDefinition Height="28"/>
                                <RowDefinition Height="28"/>
                                <RowDefinition Height="28"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Rise Time" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Column="1" x:Name="RiseTimeText" Text="0.32s" 
                                       Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Cascadia Code" FontWeight="Bold"/>
                        
                            <TextBlock Grid.Row="1" Text="Settle Time" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="SettleTimeText" Text="0.85s" 
                                       Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Cascadia Code" FontWeight="Bold"/>
                        
                            <TextBlock Grid.Row="2" Text="Overshoot" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="OvershootText" Text="12.3%" 
                                       Foreground="{StaticResource AccentOrangeBrush}" FontFamily="Cascadia Code" FontWeight="Bold"/>
                        
                            <TextBlock Grid.Row="3" Text="Steady-State Error" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="SteadyStateText" Text="0.5%" 
                                       Foreground="{StaticResource AccentGreenBrush}" FontFamily="Cascadia Code" FontWeight="Bold"/>
                        
                            <TextBlock Grid.Row="4" Text="Peak Time" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="PeakTimeText" Text="0.45s" 
                                       Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Cascadia Code" FontWeight="Bold"/>
                        </Grid>
                    </Border>
                    
                    <!-- Suggestions -->
                    <TextBlock Text="SUGGESTIONS" Style="{StaticResource SectionHeader}"/>
                    <StackPanel x:Name="SuggestionsList">
                        <Border Background="{StaticResource BgCardBrush}" CornerRadius="6" Padding="12" Margin="0,0,0,6"
                                BorderBrush="{StaticResource AccentOrangeBrush}" BorderThickness="0,0,0,2">
                            <StackPanel>
                                <TextBlock Text="&#x26A0; Reduce overshoot" Foreground="{StaticResource AccentOrangeBrush}" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="Try increasing kD by 20% or reducing kP by 10%" 
                                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" TextWrapping="Wrap" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="{StaticResource BgCardBrush}" CornerRadius="6" Padding="12" Margin="0,0,0,6"
                                BorderBrush="{StaticResource AccentGreenBrush}" BorderThickness="0,0,0,2">
                            <StackPanel>
                                <TextBlock Text="&#x2713; Good rise time" Foreground="{StaticResource AccentGreenBrush}" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="Response is fast enough for competition" 
                                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" TextWrapping="Wrap" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Auto-Tune -->
                    <TextBlock Text="AUTO-TUNE" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource GainCard}">
                        <StackPanel>
                            <TextBlock Text="Automatically find optimal gains using established tuning methods." 
                                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,12"/>
                            <ComboBox x:Name="AutoTuneMethod" Margin="0,0,0,10">
                                <ComboBoxItem Content="Ziegler-Nichols" IsSelected="True"/>
                                <ComboBoxItem Content="Cohen-Coon"/>
                                <ComboBoxItem Content="Relay Feedback"/>
                            </ComboBox>
                            <Button Content="&#x1F527; Start Auto-Tune" Style="{StaticResource PrimaryButton}" 
                                    HorizontalAlignment="Stretch" Click="AutoTune_Click"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Live Values -->
                    <TextBlock Text="LIVE VALUES" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource GainCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Setpoint" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Column="1" x:Name="LiveSetpointText" Text="24.0" 
                                       Foreground="{StaticResource AccentGreenBrush}" FontFamily="Cascadia Code"/>
                            
                            <TextBlock Grid.Row="1" Text="Measurement" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LiveMeasurementText" Text="23.5" 
                                       Foreground="{StaticResource AccentCyanBrush}" FontFamily="Cascadia Code"/>
                            
                            <TextBlock Grid.Row="2" Text="Error" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LiveErrorText" Text="0.5" 
                                       Foreground="{StaticResource AccentPinkBrush}" FontFamily="Cascadia Code"/>
                            
                            <TextBlock Grid.Row="3" Text="Output" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="LiveOutputText" Text="42" 
                                       Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Cascadia Code" FontWeight="Bold"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

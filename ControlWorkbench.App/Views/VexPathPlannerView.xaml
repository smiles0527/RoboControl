<UserControl x:Class="ControlWorkbench.App.Views.VexPathPlannerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{StaticResource BgDarkBrush}">
    
    <UserControl.Resources>
        <Style x:Key="ToolButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BgLightBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgCardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel - Path List and Tools -->
        <Border Grid.Column="0" Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel>
                    <!-- Header with glow -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Ellipse Width="10" Height="10" Margin="0,0,10,0">
                            <Ellipse.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource AccentPink}" Offset="0"/>
                                    <GradientStop Color="{StaticResource AccentPurple}" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Fill>
                            <Ellipse.Effect>
                                <DropShadowEffect Color="{StaticResource AccentPink}" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="PATH PLANNER" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    
                    <!-- Game Selection -->
                    <TextBlock Text="VRC GAME" Style="{StaticResource SectionHeader}"/>
                    <ComboBox x:Name="GameCombo" SelectedIndex="0">
                        <ComboBoxItem Content="High Stakes (2024-25)"/>
                        <ComboBoxItem Content="Over Under (2023-24)"/>
                        <ComboBoxItem Content="Spin Up (2022-23)"/>
                    </ComboBox>
                    
                    <!-- Alliance Selection -->
                    <TextBlock Text="ALLIANCE" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="RedAlliance" IsChecked="True" Cursor="Hand">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="bg" CornerRadius="6" Padding="15,10" Cursor="Hand">
                                            <StackPanel HorizontalAlignment="Center">
                                                <Ellipse Width="20" Height="20" Margin="0,0,0,6">
                                                    <Ellipse.Fill>
                                                        <SolidColorBrush Color="{StaticResource AccentRed}"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <TextBlock Text="RED" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                                                           HorizontalAlignment="Center" FontSize="12"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="bg" Property="Background">
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="{StaticResource AccentRed}" Opacity="0.2"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="bg" Property="BorderBrush" Value="{StaticResource AccentRedBrush}"/>
                                                <Setter TargetName="bg" Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                            <RadioButton x:Name="BlueAlliance" Grid.Column="1" Cursor="Hand">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="bg" CornerRadius="6" Padding="15,10" Cursor="Hand">
                                            <StackPanel HorizontalAlignment="Center">
                                                <Ellipse Width="20" Height="20" Margin="0,0,0,6">
                                                    <Ellipse.Fill>
                                                        <SolidColorBrush Color="{StaticResource AccentBlue}"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <TextBlock Text="BLUE" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" 
                                                           HorizontalAlignment="Center" FontSize="12"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="bg" Property="Background">
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="{StaticResource AccentBlue}" Opacity="0.2"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="bg" Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"/>
                                                <Setter TargetName="bg" Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                        </Grid>
                    </Border>
                    
                    <!-- Starting Position -->
                    <TextBlock Text="STARTING POSITION" Style="{StaticResource SectionHeader}"/>
                    <ComboBox x:Name="StartPosCombo" SelectedIndex="0">
                        <ComboBoxItem Content="Positive Corner (+)"/>
                        <ComboBoxItem Content="Negative Corner (-)"/>
                        <ComboBoxItem Content="Skills Start"/>
                    </ComboBox>
                    
                    <!-- Paths List -->
                    <TextBlock Text="PATHS" Style="{StaticResource SectionHeader}"/>
                    <ListBox x:Name="PathsList" Height="120">
                        <ListBoxItem Content="Red Positive Auton" IsSelected="True"/>
                        <ListBoxItem Content="Red Negative Auton"/>
                        <ListBoxItem Content="Blue Positive Auton"/>
                        <ListBoxItem Content="Skills Run"/>
                    </ListBox>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Center">
                        <Button Content="+ New" Style="{StaticResource ToolButton}" Click="NewPath_Click"/>
                        <Button Content="Copy" Style="{StaticResource ToolButton}" Click="CopyPath_Click"/>
                        <Button Content="Delete" Style="{StaticResource ToolButton}" Click="DeletePath_Click"/>
                    </StackPanel>
                    
                    <!-- Drawing Tools -->
                    <TextBlock Text="TOOLS" Style="{StaticResource SectionHeader}"/>
                    <WrapPanel>
                        <Button Content="&#x1F4CD; Waypoint" Style="{StaticResource ToolButton}" Click="AddWaypoint_Click"/>
                        <Button Content="&#x21BB; Turn" Style="{StaticResource ToolButton}" Click="AddTurn_Click"/>
                        <Button Content="&#x23F8; Wait" Style="{StaticResource ToolButton}"/>
                        <Button Content="&#x1F534; Mogo" Style="{StaticResource ToolButton}"/>
                        <Button Content="&#x1F7E1; Ring" Style="{StaticResource ToolButton}"/>
                    </WrapPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="&#x21B6; Undo" Style="{StaticResource ToolButton}" Click="Undo_Click"/>
                        <Button Content="&#x21B7; Redo" Style="{StaticResource ToolButton}" Click="Redo_Click"/>
                        <Button Content="&#x1F5D1; Clear" Style="{StaticResource ToolButton}" Click="ClearPath_Click"/>
                    </StackPanel>
                    
                    <!-- Path Settings -->
                    <TextBlock Text="PATH SETTINGS" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="Max Velocity" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                            <Grid>
                                <Slider x:Name="MaxVelSlider" Minimum="20" Maximum="100" Value="60"/>
                                <TextBlock Text="{Binding Value, ElementName=MaxVelSlider, StringFormat='{}{0:F0} in/s'}" 
                                           Foreground="{StaticResource AccentCyanBrush}" HorizontalAlignment="Right" FontWeight="Bold"
                                           FontFamily="Cascadia Code" Margin="0,-5,0,0"/>
                            </Grid>
                            
                            <TextBlock Text="Lookahead Distance" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,10,0,0"/>
                            <Grid>
                                <Slider x:Name="LookaheadSlider" Minimum="6" Maximum="24" Value="12"/>
                                <TextBlock Text="{Binding Value, ElementName=LookaheadSlider, StringFormat='{}{0:F0} in'}" 
                                           Foreground="{StaticResource AccentCyanBrush}" HorizontalAlignment="Right" FontWeight="Bold"
                                           FontFamily="Cascadia Code" Margin="0,-5,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Center - Field Canvas -->
        <Border Grid.Column="1" Background="{StaticResource BgDarkBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Toolbar -->
                <Border Grid.Row="0" Background="{StaticResource BgMediumBrush}" Padding="10"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="SimulateBtn" Content="&#x25B6; Simulate" Style="{StaticResource SuccessButton}" Click="Simulate_Click"/>
                        <Button x:Name="StopBtn" Content="&#x25A0; Stop" Style="{StaticResource DangerButton}" Click="Stop_Click"/>
                        
                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="15,5"/>
                        
                        <Button Content="+" Width="36" Style="{StaticResource ToolButton}" Click="ZoomIn_Click"/>
                        <Button Content="-" Width="36" Style="{StaticResource ToolButton}" Click="ZoomOut_Click"/>
                        <Button Content="Reset" Style="{StaticResource ToolButton}" Click="ResetView_Click"/>
                        
                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="15,5"/>
                        
                        <CheckBox x:Name="ShowGridCheck" Content="Grid" IsChecked="True" VerticalAlignment="Center" Margin="10,0"/>
                        <CheckBox x:Name="ShowCurvatureCheck" Content="Curvature" IsChecked="True" VerticalAlignment="Center" Margin="10,0"/>
                        <CheckBox x:Name="ShowVelocityCheck" Content="Velocity" IsChecked="True" VerticalAlignment="Center" Margin="10,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Field Canvas -->
                <Canvas x:Name="FieldCanvas" Grid.Row="1" ClipToBounds="True"
                        MouseLeftButtonDown="FieldCanvas_MouseLeftButtonDown"
                        MouseLeftButtonUp="FieldCanvas_MouseLeftButtonUp"
                        MouseMove="FieldCanvas_MouseMove"
                        MouseWheel="FieldCanvas_MouseWheel"
                        MouseRightButtonDown="FieldCanvas_MouseRightButtonDown">
                    <Canvas.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#0D1117" Offset="0"/>
                            <GradientStop Color="#161B22" Offset="1"/>
                        </LinearGradientBrush>
                    </Canvas.Background>
                    <Canvas.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Waypoint Here" Click="AddWaypointHere_Click"/>
                            <MenuItem Header="Add Turn Point" Click="AddTurnHere_Click"/>
                            <Separator/>
                            <MenuItem Header="Add Action">
                                <MenuItem Header="Score on Stake"/>
                                <MenuItem Header="Grab Mobile Goal"/>
                                <MenuItem Header="Release Mobile Goal"/>
                                <MenuItem Header="Toggle Intake"/>
                                <MenuItem Header="Wait (ms)..."/>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Delete Selected Point" Click="DeletePoint_Click"/>
                        </ContextMenu>
                    </Canvas.ContextMenu>
                </Canvas>
                
                <!-- Timeline -->
                <Border Grid.Row="2" Background="{StaticResource BgMediumBrush}" Padding="15,10"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border Background="{StaticResource BgCardBrush}" CornerRadius="4" Padding="10,5" Margin="5,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="TIME" Foreground="{StaticResource TextMutedBrush}" FontSize="10" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="TimelineText" Text="0.0s / 3.2s" Foreground="{StaticResource AccentCyanBrush}" 
                                               FontFamily="Cascadia Code" FontWeight="Bold" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Background="{StaticResource BgCardBrush}" CornerRadius="4" Padding="10,5" Margin="5,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="DIST" Foreground="{StaticResource TextMutedBrush}" FontSize="10" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="DistanceText" Text="0.0 / 48.5 in" Foreground="{StaticResource AccentPurpleBrush}" 
                                               FontFamily="Cascadia Code" FontWeight="Bold" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Background="{StaticResource BgCardBrush}" CornerRadius="4" Padding="10,5" Margin="5,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="WAYPOINTS" Foreground="{StaticResource TextMutedBrush}" FontSize="10" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="WaypointCountText" Text="5" Foreground="{StaticResource AccentPinkBrush}" 
                                               FontFamily="Cascadia Code" FontWeight="Bold" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <Slider Grid.Row="1" x:Name="TimelineSlider" Minimum="0" Maximum="100" Value="0" Margin="0,10,0,0"
                                ValueChanged="TimelineSlider_ValueChanged"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        
        <!-- Right Panel - Waypoint Details and Code -->
        <Border Grid.Column="2" Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel>
                    <!-- Selected Waypoint -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Ellipse Width="10" Height="10" Fill="{StaticResource AccentCyanBrush}" Margin="0,0,10,0">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="{StaticResource AccentCyan}" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="SELECTED WAYPOINT" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    
                    <Border Style="{StaticResource StatCard}">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="{StaticResource AccentCyan}" Opacity="0.3"/>
                        </Border.BorderBrush>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="X" Foreground="{StaticResource AccentCyanBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" x:Name="WaypointX" Text="24.0" TextChanged="WaypointValue_Changed"/>
                            
                            <TextBlock Grid.Row="1" Text="Y" Foreground="{StaticResource AccentPurpleBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="WaypointY" Text="36.0" TextChanged="WaypointValue_Changed"/>
                            
                            <TextBlock Grid.Row="2" Text="Heading" Foreground="{StaticResource AccentPinkBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="WaypointHeading" Text="90" TextChanged="WaypointValue_Changed"/>
                            
                            <TextBlock Grid.Row="3" Text="Velocity" Foreground="{StaticResource AccentGreenBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="WaypointVel" Text="100" TextChanged="WaypointValue_Changed"/>
                        </Grid>
                    </Border>
                    
                    <!-- Actions at Waypoint -->
                    <TextBlock Text="ACTIONS AT WAYPOINT" Style="{StaticResource SectionHeader}"/>
                    <ListBox x:Name="ActionsList" Height="80">
                        <ListBoxItem Content="Wait 200ms"/>
                        <ListBoxItem Content="Grab Mobile Goal"/>
                    </ListBox>
                    <Button Content="+ Add Action" Margin="0,8,0,0"/>
                    
                    <!-- Path Statistics -->
                    <TextBlock Text="PATH STATISTICS" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Total Distance" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Column="1" x:Name="TotalDistanceText" Text="48.5 in" 
                                       Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Cascadia Code" FontWeight="Bold"/>
                            
                            <TextBlock Grid.Row="1" Text="Estimated Time" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TotalTimeText" Text="3.2s" 
                                       Foreground="{StaticResource AccentGreenBrush}" FontFamily="Cascadia Code" FontWeight="Bold"/>
                            
                            <TextBlock Grid.Row="2" Text="Waypoints" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="WaypointStatsText" Text="5" 
                                       Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Cascadia Code" FontWeight="Bold"/>
                            
                            <TextBlock Grid.Row="3" Text="Max Curvature" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="MaxCurvatureText" Text="0.08 /in" 
                                       Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Cascadia Code" FontWeight="Bold"/>
                        </Grid>
                    </Border>
                    
                    <!-- Export Options -->
                    <TextBlock Text="EXPORT" Style="{StaticResource SectionHeader}"/>
                    <Button Content="&#x1F4CB; Copy LemLib Code" Style="{StaticResource PrimaryButton}" 
                            HorizontalAlignment="Stretch" Margin="0,0,0,5" Click="CopyLemLibCode_Click"/>
                    <Button Content="&#x1F3AF; Copy Pure Pursuit" HorizontalAlignment="Stretch" Margin="0,0,0,5"
                            Click="CopyPurePursuitCode_Click"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <Button Content="Save" Click="SavePath_Click"/>
                        <Button Content="Load" Click="LoadPath_Click"/>
                    </StackPanel>
                    
                    <!-- Quick Code Preview -->
                    <TextBlock Text="CODE PREVIEW" Style="{StaticResource SectionHeader}"/>
                    <Border CornerRadius="8" Padding="10" Height="180"
                            Background="{StaticResource BgDarkBrush}"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="CodePreview" 
                                     FontFamily="Cascadia Code, Consolas" 
                                     FontSize="11" 
                                     Foreground="{StaticResource AccentCyanBrush}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

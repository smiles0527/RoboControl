<UserControl x:Class="ControlWorkbench.App.Views.LiveRobotView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#1E1E1E">
    
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="StatLabel">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="StatValue">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        <Style TargetType="Border" x:Key="StatCard">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Robot Status -->
        <Border Grid.Column="0" Background="#252526" Margin="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock Text="Robot Status" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>
                    
                    <!-- Connection Status -->
                    <Border Style="{StaticResource StatCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="ConnectionDot" Width="12" Height="12" Fill="Gray" Margin="0,0,8,0"/>
                                <TextBlock x:Name="ConnectionText" Text="Disconnected" Foreground="#888888" FontSize="14"/>
                            </StackPanel>
                            <TextBlock x:Name="LastUpdateText" Text="Last update: --" Style="{StaticResource StatLabel}" Margin="20,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Position -->
                    <TextBlock Text="POSITION" Foreground="#666666" FontSize="10" FontWeight="Bold" Margin="5,15,0,5"/>
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="X:" Style="{StaticResource StatLabel}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PosXText" Text="0.00" Style="{StaticResource StatValue}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="in" Style="{StaticResource StatLabel}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            
                            <TextBlock Grid.Row="1" Text="Y:" Style="{StaticResource StatLabel}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PosYText" Text="0.00" Style="{StaticResource StatValue}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="in" Style="{StaticResource StatLabel}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            
                            <TextBlock Grid.Row="2" Text="?:" Style="{StaticResource StatLabel}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="HeadingText" Text="0.0" Style="{StaticResource StatValue}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="�" Style="{StaticResource StatLabel}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Velocity -->
                    <TextBlock Text="VELOCITY" Foreground="#666666" FontSize="10" FontWeight="Bold" Margin="5,10,0,5"/>
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Linear:" Style="{StaticResource StatLabel}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LinearVelText" Text="0.0" Style="{StaticResource StatValue}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="in/s" Style="{StaticResource StatLabel}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            
                            <TextBlock Grid.Row="1" Text="Angular:" Style="{StaticResource StatLabel}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="AngularVelText" Text="0.0" Style="{StaticResource StatValue}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="�/s" Style="{StaticResource StatLabel}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Battery -->
                    <TextBlock Text="BATTERY" Foreground="#666666" FontSize="10" FontWeight="Bold" Margin="5,10,0,5"/>
                    <Border Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ProgressBar x:Name="BatteryBar" Height="20" Value="100" Maximum="100" Background="#3E3E42" Foreground="#4CAF50"/>
                                <TextBlock Grid.Column="1" x:Name="BatteryText" Text="100%" Foreground="White" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock x:Name="VoltageText" Text="12.5V" Style="{StaticResource StatLabel}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Match Timer -->
                    <TextBlock Text="MATCH" Foreground="#666666" FontSize="10" FontWeight="Bold" Margin="5,10,0,5"/>
                    <Border Style="{StaticResource StatCard}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="MatchTimeText" Text="1:45" FontSize="32" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="MatchPhaseText" Text="Driver Control" Style="{StaticResource StatLabel}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Subsystem Status -->
                    <TextBlock Text="SUBSYSTEMS" Foreground="#666666" FontSize="10" FontWeight="Bold" Margin="5,10,0,5"/>
                    <Border Style="{StaticResource StatCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Ellipse x:Name="IntakeDot" Width="10" Height="10" Fill="#4CAF50" Margin="0,0,8,0"/>
                                <TextBlock Text="Intake" Foreground="White"/>
                                <TextBlock x:Name="IntakeStatus" Text="Running" Style="{StaticResource StatLabel}" Margin="10,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Ellipse x:Name="ClampDot" Width="10" Height="10" Fill="Gray" Margin="0,0,8,0"/>
                                <TextBlock Text="Mogo Clamp" Foreground="White"/>
                                <TextBlock x:Name="ClampStatus" Text="Open" Style="{StaticResource StatLabel}" Margin="10,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Ellipse x:Name="LiftDot" Width="10" Height="10" Fill="Gray" Margin="0,0,8,0"/>
                                <TextBlock Text="Lift" Foreground="White"/>
                                <TextBlock x:Name="LiftStatus" Text="Down" Style="{StaticResource StatLabel}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Center: Field Visualization -->
        <Border Grid.Column="1" Background="#252526" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Toolbar -->
                <Border Grid.Row="0" Background="#2D2D30" Padding="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Live Field View" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <Separator Width="1" Background="#555555" Margin="20,0"/>
                        <CheckBox x:Name="ShowTrailCheck" Content="Show Trail" IsChecked="True" Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
                        <CheckBox x:Name="ShowPlannedPathCheck" Content="Planned Path" IsChecked="True" Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
                        <CheckBox x:Name="ShowSensorsCheck" Content="Sensors" IsChecked="True" Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
                        <Separator Width="1" Background="#555555" Margin="20,0"/>
                        <Button x:Name="ClearTrailBtn" Content="Clear Trail" Padding="10,5" Background="#3E3E42" Foreground="White" BorderThickness="0" Cursor="Hand" Click="ClearTrail_Click"/>
                        <Button x:Name="CenterRobotBtn" Content="Center on Robot" Padding="10,5" Background="#3E3E42" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="5,0,0,0" Click="CenterRobot_Click"/>
                    </StackPanel>
                </Border>
                
                <!-- Field Canvas -->
                <Canvas x:Name="FieldCanvas" Grid.Row="1" Background="#333333" ClipToBounds="True"/>
                
                <!-- Legend -->
                <Border Grid.Row="2" Background="#2D2D30" Padding="10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Rectangle Width="20" Height="4" Fill="#00C8FF"/>
                            <TextBlock Text="Planned Path" Foreground="#888888" Margin="5,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Rectangle Width="20" Height="4" Fill="#FF6B6B"/>
                            <TextBlock Text="Actual Path" Foreground="#888888" Margin="5,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Ellipse Width="12" Height="12" Fill="#4CAF50"/>
                            <TextBlock Text="Robot" Foreground="#888888" Margin="5,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Ellipse Width="12" Height="12" Fill="#FFD700"/>
                            <TextBlock Text="Target" Foreground="#888888" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Right Panel: Debug Values and Controls -->
        <Border Grid.Column="2" Background="#252526" Margin="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock Text="Debug Values" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>
                    
                    <!-- Custom Debug Values (populated from telemetry) -->
                    <ItemsControl x:Name="DebugValuesList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource StatCard}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" Style="{StaticResource StatLabel}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Value, StringFormat='{}{0:F2}'}" Style="{StaticResource StatValue}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- PID State -->
                    <TextBlock Text="PID STATE" Foreground="#666666" FontSize="10" FontWeight="Bold" Margin="5,15,0,5"/>
                    <Border Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock x:Name="PidNameText" Text="lateral" Foreground="White" FontWeight="Bold"/>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="Error:" Style="{StaticResource StatLabel}"/>
                                <TextBlock Grid.Column="1" x:Name="PidErrorText" Text="0.00" Style="{StaticResource StatValue}"/>
                                
                                <TextBlock Grid.Row="1" Text="P:" Style="{StaticResource StatLabel}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PidPText" Text="0.00" Style="{StaticResource StatValue}"/>
                                
                                <TextBlock Grid.Row="2" Text="I:" Style="{StaticResource StatLabel}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="PidIText" Text="0.00" Style="{StaticResource StatValue}"/>
                                
                                <TextBlock Grid.Row="3" Text="D:" Style="{StaticResource StatLabel}"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="PidDText" Text="0.00" Style="{StaticResource StatValue}"/>
                                
                                <TextBlock Grid.Row="4" Text="Output:" Style="{StaticResource StatLabel}"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="PidOutputText" Text="0.00" Style="{StaticResource StatValue}" Foreground="#4CAF50"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Path Progress -->
                    <TextBlock Text="PATH FOLLOWING" Foreground="#666666" FontSize="10" FontWeight="Bold" Margin="5,15,0,5"/>
                    <Border Style="{StaticResource StatCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Progress: " Style="{StaticResource StatLabel}"/>
                                <TextBlock x:Name="PathProgressText" Text="45%" Style="{StaticResource StatValue}"/>
                            </StackPanel>
                            <ProgressBar x:Name="PathProgressBar" Height="8" Value="45" Maximum="100" Background="#3E3E42" Foreground="#00C8FF" Margin="0,5,0,0"/>
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Lookahead" Style="{StaticResource StatLabel}"/>
                                    <TextBlock x:Name="LookaheadText" Text="(24.5, 36.2)" Style="{StaticResource StatValue}" FontSize="11"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Cross-track Error" Style="{StaticResource StatLabel}"/>
                                    <TextBlock x:Name="CrosstrackText" Text="0.8 in" Style="{StaticResource StatValue}" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Console / Logs -->
                    <TextBlock Text="CONSOLE" Foreground="#666666" FontSize="10" FontWeight="Bold" Margin="5,15,0,5"/>
                    <Border Background="#1E1E1E" CornerRadius="5" Padding="5" Height="150">
                        <ScrollViewer x:Name="ConsoleScroller" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="ConsoleText" FontFamily="Consolas" FontSize="10" Foreground="#9CDCFE" TextWrapping="Wrap"
                                       Text="[INFO] Robot initialized&#x0A;[INFO] Odometry calibrated&#x0A;[INFO] Autonomous started&#x0A;[DEBUG] Moving to (24, 24)&#x0A;[INFO] Path complete"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

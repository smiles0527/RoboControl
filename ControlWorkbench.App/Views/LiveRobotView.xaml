<UserControl x:Class="ControlWorkbench.App.Views.LiveRobotView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{StaticResource BgDarkBrush}">
    
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="StatLabel">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="StatValue">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas"/>
        </Style>
        <Style TargetType="Border" x:Key="StatCard">
            <Setter Property="Background" Value="{StaticResource BgCardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SectionHeader">
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,12,0,6"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Robot Status -->
        <Border Grid.Column="0" Background="{StaticResource BgMediumBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel>
                    <!-- Header with glow -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Ellipse Width="10" Height="10" Fill="{StaticResource AccentCyanBrush}" Margin="0,0,10,0">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="{StaticResource AccentCyan}" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="ROBOT STATUS" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    
                    <!-- Connection Status -->
                    <Border Style="{StaticResource StatCard}">
                        <Border.BorderBrush>
                            <SolidColorBrush x:Name="ConnectionBorderBrush" Color="{StaticResource BorderColor}"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="ConnectionDot" Width="12" Height="12" Margin="0,0,10,0">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="{StaticResource TextMuted}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock x:Name="ConnectionText" Text="Disconnected" FontSize="14" FontWeight="SemiBold">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="{StaticResource TextMuted}"/>
                                    </TextBlock.Foreground>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock x:Name="LastUpdateText" Text="Last update: --" Style="{StaticResource StatLabel}" Margin="22,4,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Position -->
                    <TextBlock Text="POSITION" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="28"/>
                                <RowDefinition Height="28"/>
                                <RowDefinition Height="28"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="X" Foreground="{StaticResource AccentCyanBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PosXText" Text="0.00" Style="{StaticResource StatValue}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="in" Style="{StaticResource StatLabel}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            
                            <TextBlock Grid.Row="1" Text="Y" Foreground="{StaticResource AccentPurpleBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PosYText" Text="0.00" Style="{StaticResource StatValue}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="in" Style="{StaticResource StatLabel}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            
                            <TextBlock Grid.Row="2" Text="&#x3B8;" Foreground="{StaticResource AccentPinkBrush}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="HeadingText" Text="0.0" Style="{StaticResource StatValue}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="&#176;" Style="{StaticResource StatLabel}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Velocity -->
                    <TextBlock Text="VELOCITY" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="28"/>
                                <RowDefinition Height="28"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Linear" Style="{StaticResource StatLabel}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LinearVelText" Text="0.0" Style="{StaticResource StatValue}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="in/s" Style="{StaticResource StatLabel}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            
                            <TextBlock Grid.Row="1" Text="Angular" Style="{StaticResource StatLabel}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="AngularVelText" Text="0.0" Style="{StaticResource StatValue}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="&#176;/s" Style="{StaticResource StatLabel}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Battery -->
                    <TextBlock Text="BATTERY" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Height="24" CornerRadius="4" Background="{StaticResource BgLightBrush}">
                                    <Border x:Name="BatteryFill" Height="24" CornerRadius="4" HorizontalAlignment="Left" Width="200">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="{StaticResource AccentGreen}" Offset="0"/>
                                                <GradientStop Color="{StaticResource AccentCyan}" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.Effect>
                                            <DropShadowEffect Color="{StaticResource AccentGreen}" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                                        </Border.Effect>
                                    </Border>
                                </Border>
                                <TextBlock Grid.Column="1" x:Name="BatteryText" Text="100%" Foreground="{StaticResource TextPrimaryBrush}" 
                                           FontWeight="Bold" FontSize="16" Margin="12,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock x:Name="VoltageText" Text="12.5V" Style="{StaticResource StatLabel}" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Match Timer -->
                    <TextBlock Text="MATCH" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource StatCard}">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="{StaticResource AccentGreen}" Opacity="0.3"/>
                        </Border.BorderBrush>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="MatchTimeText" Text="1:45" FontSize="42" FontWeight="Bold" 
                                       FontFamily="Cascadia Code, Consolas" HorizontalAlignment="Center">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="{StaticResource AccentGreen}" Offset="0"/>
                                        <GradientStop Color="{StaticResource AccentCyan}" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="{StaticResource AccentGreen}" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock x:Name="MatchPhaseText" Text="Driver Control" Style="{StaticResource StatLabel}" 
                                       HorizontalAlignment="Center" FontSize="12"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Subsystem Status -->
                    <TextBlock Text="SUBSYSTEMS" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="IntakeDot" Width="8" Height="8" Margin="0,0,10,0" VerticalAlignment="Center">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="{StaticResource AccentGreen}"/>
                                    </Ellipse.Fill>
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="{StaticResource AccentGreen}" BlurRadius="6" ShadowDepth="0" Opacity="0.8"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <TextBlock Grid.Column="1" Text="Intake" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Grid.Column="2" x:Name="IntakeStatus" Text="Running" Style="{StaticResource StatLabel}"/>
                            </Grid>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="ClampDot" Width="8" Height="8" Fill="{StaticResource TextMutedBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Mogo Clamp" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Grid.Column="2" x:Name="ClampStatus" Text="Open" Style="{StaticResource StatLabel}"/>
                            </Grid>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="LiftDot" Width="8" Height="8" Fill="{StaticResource TextMutedBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Lift" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Grid.Column="2" x:Name="LiftStatus" Text="Down" Style="{StaticResource StatLabel}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Center: Field Visualization -->
        <Border Grid.Column="1" Background="{StaticResource BgDarkBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Toolbar -->
                <Border Grid.Row="0" Background="{StaticResource BgMediumBrush}" Padding="15,10"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="LIVE FIELD VIEW" FontSize="14" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" Margin="0,0,30,0"/>
                        
                        <CheckBox x:Name="ShowTrailCheck" Content="Trail" IsChecked="True" VerticalAlignment="Center" Margin="0,0,20,0"/>
                        <CheckBox x:Name="ShowPlannedPathCheck" Content="Planned Path" IsChecked="True" VerticalAlignment="Center" Margin="0,0,20,0"/>
                        <CheckBox x:Name="ShowSensorsCheck" Content="Sensors" IsChecked="True" VerticalAlignment="Center" Margin="0,0,20,0"/>
                        
                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="10,0,20,0"/>
                        
                        <Button x:Name="ClearTrailBtn" Content="Clear Trail" Padding="12,6" Click="ClearTrail_Click"/>
                        <Button x:Name="CenterRobotBtn" Content="Center" Padding="12,6" Click="CenterRobot_Click"/>
                    </StackPanel>
                </Border>
                
                <!-- Field Canvas -->
                <Canvas x:Name="FieldCanvas" Grid.Row="1" ClipToBounds="True">
                    <Canvas.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#0D1117" Offset="0"/>
                            <GradientStop Color="#161B22" Offset="1"/>
                        </LinearGradientBrush>
                    </Canvas.Background>
                </Canvas>
                
                <!-- Legend -->
                <Border Grid.Row="2" Background="{StaticResource BgMediumBrush}" Padding="15,8"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="15,0">
                            <Border Width="20" Height="3" CornerRadius="1" Background="{StaticResource AccentCyanBrush}">
                                <Border.Effect>
                                    <DropShadowEffect Color="{StaticResource AccentCyan}" BlurRadius="5" ShadowDepth="0" Opacity="0.5"/>
                                </Border.Effect>
                            </Border>
                            <TextBlock Text="Planned Path" Foreground="{StaticResource TextSecondaryBrush}" Margin="8,0,0,0" FontSize="11"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="15,0">
                            <Border Width="20" Height="3" CornerRadius="1" Background="{StaticResource AccentPinkBrush}"/>
                            <TextBlock Text="Actual Path" Foreground="{StaticResource TextSecondaryBrush}" Margin="8,0,0,0" FontSize="11"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="15,0">
                            <Ellipse Width="12" Height="12" Fill="{StaticResource AccentGreenBrush}">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="{StaticResource AccentGreen}" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock Text="Robot" Foreground="{StaticResource TextSecondaryBrush}" Margin="8,0,0,0" FontSize="11"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="15,0">
                            <Ellipse Width="12" Height="12" Fill="{StaticResource AccentYellowBrush}"/>
                            <TextBlock Text="Target" Foreground="{StaticResource TextSecondaryBrush}" Margin="8,0,0,0" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Right Panel: Debug Values and Controls -->
        <Border Grid.Column="2" Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Ellipse Width="10" Height="10" Fill="{StaticResource AccentPurpleBrush}" Margin="0,0,10,0">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="{StaticResource AccentPurple}" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="DEBUG VALUES" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    
                    <!-- Custom Debug Values -->
                    <ItemsControl x:Name="DebugValuesList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource StatCard}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" Style="{StaticResource StatLabel}" FontFamily="Cascadia Code, Consolas"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Value, StringFormat='{}{0:F2}'}" Style="{StaticResource StatValue}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- PID State -->
                    <TextBlock Text="PID STATE" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource StatCard}">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="{StaticResource AccentCyan}" Opacity="0.3"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <TextBlock x:Name="PidNameText" Text="lateral" Foreground="{StaticResource AccentCyanBrush}" FontWeight="Bold" FontSize="13"/>
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="55"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="24"/>
                                    <RowDefinition Height="24"/>
                                    <RowDefinition Height="24"/>
                                    <RowDefinition Height="24"/>
                                    <RowDefinition Height="24"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="Error" Style="{StaticResource StatLabel}"/>
                                <TextBlock Grid.Column="1" x:Name="PidErrorText" Text="0.00" Style="{StaticResource StatValue}" FontSize="14"/>
                                
                                <TextBlock Grid.Row="1" Text="P" Foreground="{StaticResource AccentGreenBrush}" FontWeight="Bold"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PidPText" Text="0.00" Style="{StaticResource StatValue}" FontSize="14"/>
                                
                                <TextBlock Grid.Row="2" Text="I" Foreground="{StaticResource AccentBlueBrush}" FontWeight="Bold"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="PidIText" Text="0.00" Style="{StaticResource StatValue}" FontSize="14"/>
                                
                                <TextBlock Grid.Row="3" Text="D" Foreground="{StaticResource AccentOrangeBrush}" FontWeight="Bold"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="PidDText" Text="0.00" Style="{StaticResource StatValue}" FontSize="14"/>
                                
                                <TextBlock Grid.Row="4" Text="Output" Style="{StaticResource StatLabel}"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="PidOutputText" Text="0.00" FontSize="14" FontWeight="Bold"
                                           Foreground="{StaticResource AccentCyanBrush}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Path Progress -->
                    <TextBlock Text="PATH FOLLOWING" Style="{StaticResource SectionHeader}"/>
                    <Border Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Progress" Style="{StaticResource StatLabel}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" x:Name="PathProgressText" Text="45%" Style="{StaticResource StatValue}"/>
                            </Grid>
                            <Border Height="8" CornerRadius="4" Background="{StaticResource BgLightBrush}" Margin="0,8,0,0">
                                <Border x:Name="PathProgressFill" Height="8" CornerRadius="4" HorizontalAlignment="Left" Width="100">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="{StaticResource AccentCyan}" Offset="0"/>
                                            <GradientStop Color="{StaticResource AccentPurple}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect Color="{StaticResource AccentCyan}" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                                    </Border.Effect>
                                </Border>
                            </Border>
                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Lookahead" Style="{StaticResource StatLabel}"/>
                                    <TextBlock x:Name="LookaheadText" Text="(24.5, 36.2)" Style="{StaticResource StatValue}" FontSize="11"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Cross-track Error" Style="{StaticResource StatLabel}"/>
                                    <TextBlock x:Name="CrosstrackText" Text="0.8 in" Style="{StaticResource StatValue}" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Console / Logs -->
                    <TextBlock Text="CONSOLE" Style="{StaticResource SectionHeader}"/>
                    <Border CornerRadius="8" Padding="10" Height="160"
                            Background="{StaticResource BgDarkBrush}"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <ScrollViewer x:Name="ConsoleScroller" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="ConsoleText" FontFamily="Cascadia Code, Consolas" FontSize="11" TextWrapping="Wrap">
                                <TextBlock.Foreground>
                                    <SolidColorBrush Color="{StaticResource AccentCyan}"/>
                                </TextBlock.Foreground>
                                <Run Foreground="{StaticResource AccentGreenBrush}">[INFO]</Run><Run> Robot initialized</Run><LineBreak/>
                                <Run Foreground="{StaticResource AccentGreenBrush}">[INFO]</Run><Run> Odometry calibrated</Run><LineBreak/>
                                <Run Foreground="{StaticResource AccentGreenBrush}">[INFO]</Run><Run> Autonomous started</Run><LineBreak/>
                                <Run Foreground="{StaticResource AccentBlueBrush}">[DEBUG]</Run><Run> Moving to (24, 24)</Run><LineBreak/>
                                <Run Foreground="{StaticResource AccentGreenBrush}">[INFO]</Run><Run> Path complete</Run>
                            </TextBlock>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
